#!/bin/bash

set -e

VENV_DIR="./.venv"

if [ ! -d "$VENV_DIR" ]; then
	echo "Creating virtual environment..."
	python3 -m venv "$VENV_DIR"

	source "$VENV_DIR/bin/activate"
	echo "Installing dependencies..."
	pip install --upgrade pip
	pip install torch torchvision transformers datasets
fi

source "$VENV_DIR/bin/activate"

python3 train.py "$@"
