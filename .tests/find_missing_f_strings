#!/bin/bash

# Pfad zum Python-Skript
SCRIPT=".tests/find_missing_f_strings.py"

# Prüfen, ob Argumente übergeben wurden
if [ "$#" -eq 0 ]; then
    # Keine Argumente → alle .py Dateien im aktuellen Verzeichnis
    FILES=$(find . -maxdepth 1 -type f -name "*.py" | tr '\n' ' ')
else
    # Argumente wurden übergeben → direkt verwenden
    FILES="$@"
fi

# Python-Skript mit den Dateien aufrufen
python3 "$SCRIPT" $FILES
