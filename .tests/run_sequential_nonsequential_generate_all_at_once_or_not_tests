#!/bin/bash

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
cd "$SCRIPT_DIR"
cd ..

set -euo pipefail

MAX_EVAL=50
NUM_PARALLEL_JOBS=10
NR_RESULTS=1
NUM_RANDOM_STEPS=10
TIME=2400

RAW_SAMPLES_LIST=(1 512 1024)
NUM_RESTARTS_LIST=(1 10 20)

run_optimization() {
	local raw_samples="$1"
	local num_restarts="$2"
	local testname="$3"

	local additional_parameter="--username=raw_samples_and_num_restart_tests"
	additional_parameter+=" --raw_samples=$raw_samples --num_restarts=$num_restarts"

	echo "Starting Test: $testname"
	tests/start_simple_optimization_run \
		--max_eval=$MAX_EVAL \
		--num_parallel_jobs=$NUM_PARALLEL_JOBS \
		--nr_results=$NR_RESULTS \
		--num_random_steps=$NUM_RANDOM_STEPS \
		--time=$TIME \
		--additional_parameter="$additional_parameter --show_generation_and_submission_sixel" \
		--revert_to_random_when_seemingly_exhausted \
		--force_choice_for_ranges \
		--testname="$testname" \
		--flame_graph \
		--generate_all_jobs_at_once
}

for raw_samples in "${RAW_SAMPLES_LIST[@]}"; do
	for num_restarts in "${NUM_RESTARTS_LIST[@]}"; do
		run_optimization $raw_samples $num_restarts "sequential____all_at_once____rs${raw_samples}_nr${num_restarts}"
		run_optimization $raw_samples $num_restarts "nonsequential____all_at_once____rs${raw_samples}_nr${num_restarts}"
	done
done
