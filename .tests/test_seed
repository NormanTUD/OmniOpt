#!/usr/bin/env bash

# HELPPAGE: Test if the seed is properly used and results are consistent and deterministic.

SCRIPT_DIR=$(dirname $(realpath "$0"))

if [[ -z $OMNIOPT_CALL ]]; then
	OMNIOPT_CALL="./omniopt"
fi
export OMNIOPT_CALL

cd $SCRIPT_DIR
cd ..

source .colorfunctions.sh

seed=""
gpus=""
hash=""
skip_search=""

function help() {
	echo "Usage: $0 --seed <int> --gpus <int> --hash <string>"
	echo "  --seed=<int>    Sets the seed value"
	echo "  --gpus=<int>    Number of GPUs"
	echo "  --hash=<string> MD5 hash value"
	echo "  --help          Displays this help message"
	echo "  --skip_search   Skips search"
	exit 0
}

while [[ $# -gt 0 ]]; do
	case "$1" in
		--seed)
			if [[ -n "$2" && "$2" =~ ^[0-9]+$ ]]; then
				seed="$2"
				shift 2
			else
				echo "Error: --seed requires an integer value" >&2
				exit 1
			fi
			;;
		--gpus)
			if [[ -n "$2" && "$2" =~ ^[0-9]+$ ]]; then
				gpus="$2"
				shift 2
			else
				echo "Error: --gpus requires an integer value" >&2
				exit 1
			fi
			;;
		--hash)
			if [[ -n "$2" && "$2" =~ ^[a-fA-F0-9]{32}$ ]]; then
				hash="$2"
				shift 2
			else
				echo "Error: --hash requires a valid MD5 hash (32 hex characters)" >&2
				exit 1
			fi
			;;
		--skip_search)
			skip_search=" --skip_search"
			;;
		--help)
			help
			;;
		*)
			echo "Error: Unknown option $1" >&2
			help
			exit 1
			;;
	esac
done

if [[ -z "$seed" || -z "$gpus" || -z "$hash" ]]; then
	echo "Error: --seed, --gpus, and --hash are required options" >&2
	help	
	exit 1
fi

test_name="seed_test_$seed"

run_dir=runs/$test_name

results_csv="$run_dir/0/results.csv"

if [[ -d $run_dir ]]; then
	rm -rf $run_dir
fi

$OMNIOPT_CALL --partition=alpha --experiment_name=$test_name --mem_gb=1 --time=60 --worker_timeout=5 --max_eval=2 --num_parallel_jobs=1 --gpus=$gpus --num_random_steps=1 --follow --result_names RESULT=min --run_program='ZWNobyAiUkVTVUxUOiAlKGVwb2NocyklKGxyKSI=' --cpus_per_task=1 --nodes_per_job=1 --model=BOTORCH_MODULAR --occ_type=euclid --run_mode=local --parameter epochs range 1 10 float false --parameter lr range 0 10 float false --seed $seed $skip_search --debug_stack_trace_regex "save_results_csv|append_and_read|fetch_and_prepare_trials"

exit_code=$?

if [[ $skip_search == " --skip_search" ]]; then
	exit_code=0
fi

if [[ $exit_code -ne 0 ]]; then
	red_text "OmniOpt2 failed! Exit code should have been 0, but is: $exit_code"
	exit 2
fi

real_hash=$(cat $results_csv | sed -e 's#.*,##' | md5sum | sed -e 's#\s.*##')

if [[ $seed -eq 1234 ]]; then
	if [[ $(cat $results_csv | grep "5.15" | grep "^0," | wc -l) -ne 1 ]]; then
		echo "ERROR: The first line does not contain the string 5.15 exactly once. This can mean several things, like:";
		echo "- ax changed an API call,";
		echo "- there is a bug in OmniOpt, most likely in the save_results.csv or anything related to creating or getting jobs, or something with setting seeds";
		echo "The $results_csv looks like this:"
		echo "================================================="
		echo "================================================="
		cat $results_csv
		echo "================================================="
		echo "================================================="

		exit 1
	fi
fi

echo "Wanted Hash: '$hash' (length: ${#hash})"
echo "Real Hash:   '$real_hash' (length: ${#real_hash})"

if [ "$real_hash" = "$hash" ]; then
	green_text "Hash of the '$results_csv' is $real_hash"
	exit 0
else
	red_text "====> $results_csv ====>\n"
	cat $results_csv
	red_text "<==== $results_csv <====\n"

	red_text "Hash of '$results_csv' is different from the wanted hash (wanted: $hash, real: $real_hash)"
	exit 1
fi
