#!/bin/bash

function echoerr() {
        echo "$@" 1>&2
}

function yellow_text {
        echoerr -e "\e\033[0;33m$1\e[0m"
}

function red_text {
        echoerr -e "\e[31m$1\e[0m"
}

function green_text {
        echoerr -e "\e\033[0;32m$1\e[0m"
}

VENV_DIR_NAME=".omniax_$(uname -m)_$(python3 --version | sed -e 's# #_#g')$_cluster"

ROOT_VENV_DIR=$HOME

if [[ ! -z $root_venv_dir ]] && [[ -d $root_venv_dir ]]; then
	ROOT_VENV_DIR=$root_venv_dir
fi

VENV_DIR=$ROOT_VENV_DIR/$VENV_DIR_NAME

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

cd $SCRIPT_DIR

cd ..

source .shellscript_functions

errors=()

for i in $(ls omniopt omniopt_docker omniopt_evaluate omniopt_plot omniopt_share); do
	shellcheck -Calways -e SC2004,SC2002,SC2001,SC1091,SC2086,SC2009,SC2046,SC2317,SC2164,SC2048,SC2045,SC2068,SC2076 $i || {
		ERRSTR="Failed linting $i: Run 'source $VENV_DIR/bin/activate' and then 'shellcheck $i' to see details."
		red_text $ERRSTR
		errors+=("$ERRSTR")
	}
done

secs=$SECONDS
hrs=$(( secs/3600 )); mins=$(( (secs-hrs*3600)/60 )); secs=$(( secs-hrs*3600-mins*60 ))
printf 'Shellcheck test took: %02d:%02d:%02d\n' $hrs $mins $secs

if [ ${#errors[@]} -eq 0 ]; then
	green_text "No shellcheck errors"
	exit 0
else
	red_text "=> SHELLCHECK-ERRORS => SHELLCHECK-ERRORS => SHELLCHECK-ERRORS =>\n"
	for i in "${errors[@]}"; do
		red_text "$i\n"
	done

	exit ${#errors[@]}
fi
